</head>

<body>
    <header class="header">
        <section class="col-12">
            <div class="row">
                <img src="./images/location.png" alt="an image of a map and location">
                <h1>GeoTagApp</h1>
                <nav>

                    <a href="#">About</a> | <a href="#">Help</a> | <a href="/">Home</a>
                </nav>
            </div>
        </section>
    </header>

    <main class="main">
        <section class="col-4">
            <section class="main__tagging tagging">
                <h2>Tagging</h2>

                <!-- ############### VS1Lab 1a Form 1 Start -->
                <form class="body" id="tag-form" action="/tagging" method="post">

                    <fieldset><legend>Add a new Geotag</legend>

                        <label>Latitute:<input type="text" label="Latitute" id="La" value="45.42069187" disabled></label>
                        <label>Longitude:<input type="text" label="Longitute" id="Lo" value="45.12384935" disabled></label>
                        <label>Name:<input type="text" label="name" id="Na" placeholder="e.g. bochum" maxlength="10" required></label>
                        <label>Hashtag:<input type="text" label="Hashtag" id="Ha" placeholder="e.g. #batman" maxlength="11" pattern="#\w+"></label>
                        <button class="button-custom" type="submit">Add Tag</button> 

                    </fieldset>    
                
                </form>
                <!-- ############### VS1Lab 1a Form 1 End -->
            </section>
        </section>

        <section class="col-8">
        <section class="main__discovery discovery">
            <h2>Discovery</h2>

            <!-- ############### VS1Lab 1a Form 2 Start -->
            <form class="body" action="/discovery" method="post">

                <!-- ... your code here ... -->
                <fieldset><legend>Search</legend>
                    <label>Search Term or Keyword:<input type="text" id="Dse" placeholder="e.g. karlsruhe"></label>
                    <label hidden>Latitude<input type="text" id="Dla" placeholder="e.g. karlsruhe" ></label>
                    <label hidden>Longitude<input type="text" id="Dlo" placeholder="e.g. karlsruhe" ></label>
                    <button class="button-custom" type="submit" disabled>Search</button>    
                </fieldset>

            </form>
            <!-- ############### VS1Lab 1a Form 2 End -->
                <div class="row">
                    <ul>
                        <% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
                            <li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
                        <% }); %>
                    </ul>
                    <div id="picture">
                        <img src="./images/mapview.jpg" alt="a map with locations" id="mapView"/>
                        <span></span>
                    </div>
                </div>
        </section>
        </section>8
